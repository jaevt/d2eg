<body  background="/img/ui/footer_lodyas.png">
	<% include ../partials/google-analytics %>
	<% include ../partials/header %>
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<div class="list-group">
					<a href="/admin/account" class="list-group-item">Inicio</a>
					<a href="/admin/players" class="list-group-item active">Lista jugadores</a>
					<a href="/admin/leagues" class="list-group-item">Lista competencias</a>
