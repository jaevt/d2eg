<body  background="/img/ui/footer_lodyas.png">
	<% include ../partials/google-analytics %>
	<% include ../partials/header %>
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				<div class="list-group">
					<a href="/admin/account" class="list-group-item">Inicio</a>
					<a href="/admin/players" class="list-group-item">Lista jugadores</a>
					<a href="/admin/leagues" class="list-group-item active">Lista competencias</a>
					<a href="#" class="list-group-item">Lista noticias</a>
					<a href="#" class="list-group-item">Editar informaci√≥n personal</a>
				</div>
			</div>
			<div class="col-md-10">
        <div class="row">
					<div class="jumbotron">
					  <h1>Competencias</h1>
						<!-- Button trigger modal -->
						<a href="/admin/leagues/create"><button type="button" class="btn btn-primary btn-lg">
						  Crear
						</button></a>
					</div>
					<% console.log(leagues) %>
          <% for (var l in leagues){ %>
          <div class="col-md-6">
            <div class="panel">
              <div class="panel-body">
								<h3>Titulo <small><%= leagues[l].title %></small></h3>
								<h3>Avatar</h3>
                <img src="<%= leagues[l].avatar %>" class="img-responsive" alt="Responsive image">
                <h4>Descripcion</h4>
                <p><%= leagues[l].description %></p>
                <h4>Reglas</h4>
                <p><%= leagues[l].rules %></p>
              </div>
              <div class="panel-footer">
                <a href="/admin/leagues/edit/<%= leagues[l]._id %>"><button class="btn">Editar</button></a>
                <a href="/admin/leagues/delete/<%= leagues[l]._id %>"><button class="btn btn-danger">Borrar</button></a>
              </div>
            </div>
          </div>
          <%}%>
        </div>
      </div>
    </div>
