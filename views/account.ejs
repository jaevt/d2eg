<% include partials/head %>
<% include partials/header %>
<% if (!user.twitch){ %>
  <a href="twitch/auth"><img src="../img/icon/twitch-login.png"></a>
<% }else{ %>
  <p>Conectado a <%= user.twitch.name %></p>
<% } %>
<% if (!user.team){ %>
  <form action="/api/team/userCreateTeam" method="POST">
    <div class="form-group">
      <label>Nombre</label>
      <input type="name" class="form-control" placeholder="Nombre de team">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" placeholder="Password">
    </div>
    <div class="form-group">
      <label>Descripcion</label>
      <input type="description" class="form-control" placeholder="Historia, objetivos, lo que identifique a su equipo.">
    </div>
    <div class="form-group">
      <label>Avatar</label>
      <input type="avatar" class="form-control" placeholder="Link de una imagen">
    </div>
    <div class="form-group">
      <label>Pa√≠s</label>
      <input type="country" class="form-control" placeholder="Puede ser internacional">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
<% }else{ %>
  <p>Pertenece a <a href="/team/<%= user.team %>">Este Team</a></p>
<% } %>
<div class="container">
  <form method="GET" action="/account/update/" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <input type="email" name="mail" class="form-control" placeholder="">
    </div>
    <div class="form-group">
      <input type="submit">
    </div>
  </form>
</div>

